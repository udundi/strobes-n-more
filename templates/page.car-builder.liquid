  constructor() {
    this.carModel = window.shopifyData.carModel;
    this.collections = window.shopifyData.collections;
    this.defaultCarImage = window.shopifyData.defaultCarImage;
    this.productPlaceholder = window.shopifyData.productPlaceholder;
    this.currentView = null;
    this.currentArea = null;
    this.cart = [];
